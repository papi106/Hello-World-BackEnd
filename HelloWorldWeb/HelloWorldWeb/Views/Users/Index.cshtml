@using Microsoft.AspNetCore.Identity
@model IEnumerable<UserWithRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                Assign Role
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @if (item.RoleName.Equals("Users"))
                    {
                        <a asp-action="AssignAdminRole" asp-route-id="@item.UserId">Assign Administrator Role</a>
                    }
                    else if (item.RoleName.Equals("Administrators"))
                    {
                        <a asp-action="AssignUsualRole" asp-route-id="@item.UserId">Assign User Role</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
